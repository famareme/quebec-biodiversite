doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='description', content='')
		meta(name='author', content='')

		title QuebecBiodiversite - Sociéte de valorisation

		// Favicon
		link(rel='icon', type='image/x-icon', href='./assets/favicon.ico')

		// Bootstrap icons
		link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css', rel='stylesheet', type='text/css')

		// Google fonts
		link(href='https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic', rel='stylesheet', type='text/css')

		// Core theme CSS (includes Bootstrap)
		link(href='css/styles.css?v=1.0', rel='stylesheet')
		link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css', rel='stylesheet')

	body
		nav.navbar.navbar-light.bg-light.static-top
			.container-fluid
				.container
						.row.justify-content-center.align-items-center.mb-3
								.col-md-4
										a.navbar-brand(href='/').showcase-img(style="background-image: url('assets/img/logoQB1.png'); ")
								.col-md-8
										ul.nav.justify-content-end
											li.nav-item
												a.nav-link.active(href='/') ACCUEIL
												li.nav-item
												a.nav-link(href='/profil.html') PROFIL
												li.nav-item
												a.nav-link(href='/services.html') SERVICES
												li.nav-item
												a.nav-link(href='/realisations.html') RÉALISATIONS
												li.nav-item
												a.nav-link(href='/contact.html') CONTACT
				// Masthead
				header.masthead
						img.banner-inner(src='assets/img/contact.jpg', alt='service')
						.container.position-relative
								.row.justify-content-center
										.col-xl-6
												.text-center.text-white.my-4
														// Page heading
														h1 Contact
														h2.lead Prenez contact avec nous !


				// Icons Grid
				.container
					section.features-icons.bg-light
							.container
									section.get-in-touch
										h1.title.text-center Entrer en contact
										form.contact-form.row(action="https://formspree.io/f/mldeybed" method="POST")
											.form-field.col-lg-6
												label.label(for="name") Nom
												input#name.input-text.js-input(type="text" required)
											.form-field.col-lg-6
												label.label(for="email") E-mail
												input#email.input-text.js-input(type="email" required)
											.form-field.col-lg-6
												label.label(for="company") Nom Compagnie / Nom
												input#company.input-text.js-input(type="text" required)
											.form-field.col-lg-6
												label.label(for="phone") Numéro contact
												input#phone.input-text.js-input(type="text" required)
											.form-field.col-lg-12
												label.label(for="message") Message
												textarea#message.w-100(cols="100" required)
											.form-field.col-lg-12.text-center
												input.submit-btn(type="submit" value="Submit")

					// Footer
					footer.footer.bg-light
							.container
									.row
											.col-lg-6.h-100.text-center.text-lg-start.my-auto
													ul.nav-footer.list-inline.mb-2
															li.list-inline-item
																	a(href='/') ACCUEIL
															li.list-inline-item ⋅
															li.list-inline-item
																	a(href='/profil.html') PROFIL
															li.list-inline-item ⋅
															li.list-inline-item
																	a(href='/services.html') SERVICES
															li.list-inline-item ⋅
															li.list-inline-item
																	a(href='/realisations.html') RÉALISATIONS
															li.list-inline-item ⋅
															li.list-inline-item
																	a(href='/contact.html') CONTACT
													p.text-muted.small.mb-4.mb-lg-0 &copy; QuebecBiodiversite 2024. All Rights Reserved.
											.col-lg-6.h-100.text-center.text-lg-end.my-auto
													ul.list-inline.mb-0
															li.list-inline-item.me-4
																	a(href='#!')
																			i.bi-facebook.fs-3
															li.list-inline-item.me-4
																	a(href='#!')
																			i.bi-twitter.fs-3
															li.list-inline-item
																	a(href='#!')
																			i.bi-instagram.fs-3

					// Bootstrap core JS
					script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')

					// Core theme JS
					script(src='js/scripts.js')

					// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
					// * *                               SB Forms JS                               * *
